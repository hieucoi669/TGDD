<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TGDD" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tool_bar_bg</item>
        <item name="colorPrimaryDark">@color/tool_bar_bg</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/tool_bar_bg</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">
            @color/navigationBarColor
        </item>
    </style>

    <style name="Theme.TGDDMenu" parent="Theme.AppCompat.NoActionBar">
        <item name="iconTint">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">
            @color/navigationBarColor
        </item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/tool_bar_bg</item>

    </style>
</resources>